<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script>
    let requestOptionsShowJobs = {
        method: 'GET',
        redirect: 'follow'
    };

    fetch("http://localhost:8080/job/find", requestOptionsShowJobs)
        .then(response => response.text())
        .then(result => {
            const resultJSON = JSON.parse(result);
            let htmlContent = `
                <table  class = "table">
                    <tr>
                        <th>name</th>
                        <th> company name </th>
                        <th>profile</th>
                        <th>preference</th>
                        <th>package_info</th>
                        <th>salary_start</th>
                        <th>salary_end</th>
                        <th>Apply</th>
                    </tr> 
            `
            console.log(resultJSON);
            for (let index = 0; index < resultJSON.length; index++) {
                    const element = resultJSON[index];
            htmlContent += `
                <tr>
                    <td>${element.name}</td>
                    <td>${element.user.name}</td>
                    <td>${element.profile}</td>
                    <td>${element.preference}</td>
                    <td>${element.package_info}</td>
                    <td>${element.salary_start}</td>
                    <td>${element.salary_end}</td>
                    <td>
                        <button name="updateButton" class="btn btn-primary" onclick="adddatainlist(${element.id}, ${element.employer_id})"> Apply </button>
                    </td>
                </tr>
                `
            }
            htmlContent += `</table>`;

            document.getElementById("contactinjobs").innerHTML = htmlContent;
        })
        .catch(error => console.log('error', error));
        
 
        function adddatainlist(id, empID) {
            let tmpStatus = 'pending';
            var myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            var raw = JSON.stringify({
                "job_id": id,
                "ByAction": empID,
                "status": tmpStatus
            });

            var requestOptionsShowJobs = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("http://localhost:8080/list/createList", requestOptionsShowJobs)
                .then(response => response.text())
                .then(result => console.log(result))
                .catch(error => console.log('error', error));
        }

</script>
</head>

<body>
    <%- include('./navbar') %>
    <h1> All jobs</h1>
    <div id="contactinjobs">

    </div>
</body>

</html>