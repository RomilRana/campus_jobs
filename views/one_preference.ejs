<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script>
            let requestOptionsOnePreferance = {
            method: 'GET',
            redirect: 'follow'
        };
    
        fetch("http://localhost:8080/preference/find", requestOptionsOnePreferance)
            .then(response => response.text())
            .then(result => {
                const resultJSON = JSON.parse(result);
                let htmlContent = `
                    <table class = "table">
                        <tr>
                            <th>technology</th>
                            <th>salary</th>
                            <th>location</th>
                            <th>ctc</th>
                            <th>job_type</th>
                            <th>name</th>
                            <th>email</th>
                        </tr> 
                `
                console.log(resultJSON);
                const element = resultJSON[0];
                htmlContent += `
                    <tr>
                        <td>${element.technology}</td>
                        <td>${element.salary}</td>
                        <td>${element.location}</td>
                        <td>${element.ctc}</td>
                        <td>${element.job_type}</td>
                        <td>${element.user.name}</td>
                        <td>${element.user.email}</td>
                    </tr>
                    `
                htmlContent += `</table>`;
                document.getElementById("nameOfUser").innerHTML = htmlContent;
            })
            .catch(error => console.log('error', error));
    </script>
</head>

<body>
    <%- include('./navbar') %>
    <div class="container">   
    <h1> preference </h1>
    <div id="nameOfUser">
    </div>
</div>
</body>

</html>