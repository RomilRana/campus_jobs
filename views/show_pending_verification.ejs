<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script>
        let requestOptionsFindPennding = {
            method: 'GET',
            redirect: 'follow'
        };
        // verification id for college to student
        fetch("http://localhost:8080/verification/findpending", requestOptionsFindPennding)
            .then(response => response.text())
            .then(result => {
                const resultJSON = JSON.parse(result);
                console.log(resultJSON);
                let htmlContent = `
                <table class = "table">
                    <tr>
                        <th>year</th>
                        <th>status</th>
                        <th>Name</th>
                        <th>Verfiy</th>
                        <th>course name </th
                        <th>Update</th>
                    </tr> 
            `
                console.log(resultJSON);
                for (let index = 0; index < resultJSON.length; index++) {
                    const element = resultJSON[index];
                htmlContent += `
                    <tr id="${element.studentInfo.id}">
                        <td>${element.year}</td>
                        <td>${element.status}</td>
                        <td>${element.studentInfo.name}</td>
                        <td>${element.course_name.name}</td>
                        <td>
                            <select name="status${element.studentInfo.id}">
                                <option value="-1">Please select any of the option</option>
                                <option value="approved">approved</option>
                                <option value="reject">reject</option>
                            </select>
                        </td>
                        <td>
                            <button name="updateButton" class="btn btn btn-dark" onclick="updateTheStatusOfStudent(${element.studentInfo.id})"> Update </button>
                        </td>
                    </tr>
                `
                }
                htmlContent += `</table>`;
                document.getElementById("Pendingverification").innerHTML = htmlContent;
            })
            .catch(error => console.log('error', error));

        function updateTheStatusOfStudent(id) {
            console.log(id);
            let tmpStatus = document.getElementsByName(`status${id}`)[0].value;
            console.log(tmpStatus)
            if (tmpStatus == -1) {
                console.log("Please select any of the Approve or Reject Option");
                alert("Please select any of the Approve or Reject Option");
                return;
            }

            var myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            var raw = JSON.stringify({
                "student_id": id,
                "status": tmpStatus
            });

            var requestOptions = {
                method: 'PUT',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("http://localhost:8080/verification/updatestatus", requestOptions)
                .then(response => response.text())
                .then(result => console.log(result))
                .catch(error => console.log('error', error));


        }
    </script>
</head>

<body>
    <%- include('./navbar') %>
        <h1> Pendding Verification Details</h1>
        <div id="Pendingverification">

        </div>
</body>

</html>