<body>
    <%- include('./navbar') %>
    <div>
        <form method="post" action="/job/addjob">
            <h1>Job</h1>
            <label>Name :</label>
            <input type="text" name="name" placeholder="Enter your name"> <br><br>
            <label>Profile :</label>
            <input type="text" name="profile" placeholder="Enter your Profile"> <br><br>
            <label>preference :</label>
            <input type="text" name="preference" placeholder="Enter your name"> <br><br>
            <label>package_info :</label>
            <input type="text" name="package_info" placeholder="Enter your name"> <br><br>
            <label>salary_start :</label>
            <input type="number" name="salary_start" placeholder="Enter your name"> <br><br>
            <label>salary_end :</label>
            <input type="number" name="salary_end" placeholder="Enter your name"> <br><br>
            <input type="submit" value="submit" />
        </form>
    </div>
