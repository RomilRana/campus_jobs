<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body{
            margin: 0;
            padding: 0;
            background: rgb(141, 201, 128);
            font-family: sans-serif;
        }
        ul{
            position: relative;
            width: 50%;
            margin: 100px auto 0;
            padding: 10px;
            box-sizing: border-box;
        }
        ul li{
            display: flex;
            background : rgb(25, 129, 48)  ;
            padding: 10px 20px;
            color: #fff;
            margin: 5px 0;
            transition: .5s;
        }
        ul li:hover{
            transform: scale(1.06);
            background: rgb(84, 207, 191);
        } 
        ul li span{
            margin-left: 20px;
        }
    </style>
    <script>
    let requestOptions = {
        method: 'GET',
        redirect: 'follow'
    };

    fetch("http://localhost:8080/contact_info/findOne", requestOptions)
        .then(response => response.text())
        .then(result => {
            const resultJSON = JSON.parse(result);
            let htmlContent = `
                <table class = "table">
                    <tr>
                        <th>address</th>
                        <th>locality</th>
                        <th>landmark</th>
                        <th>phone_number</th>
                        <th>state</th>
                        <th>country</th>
                        <th>city</th>
                        <th>status</th>
                        <th>zipcode</th>
                    </tr> 
            `
            console.log(resultJSON);
            const element = resultJSON;
            htmlContent += `
                <tr>
                    <td>${element.address}</td>
                    <td>${element.locality}</td>
                    <td>${element.landmark}</td>
                    <td>${element.phone_number}</td>
                    <td>${element.state}</td>
                    <td>${element.country}</td>
                    <td>${element.city}</td>
                    <td>${element.status}</td>
                    <td>${element.zipcode}</td>
                </tr>
                `
            htmlContent += `</table>`;

            document.getElementById("contactinfoofuser").innerHTML = htmlContent;
        })
        .catch(error => console.log('error', error));
</script>
</head>

<body>
    <%- include('./navbar') %>
    <h1> Contact Details</h1>
    <div id="contactinfoofuser">

    </div>
</body>

</html>